<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyFragment">

    <android.support.design.widget.FloatingActionButton
        android:layout_height="229dp"
        android:layout_width="242dp"
        android:theme="@style/FAB"
        android:id="@+id/fabEmergency"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_emergency_128"
        android:layout_gravity="center" />

    <android.support.design.widget.FloatingActionButton
        android:layout_height="132dp"
        android:layout_width="156dp"
        android:layout_marginTop="75dp"
        android:theme="@style/FAB"
        android:id="@+id/fabSearch"
        android:src="@drawable/icon_search_128"
        android:layout_gravity="center_horizontal|top" />

    <android.support.design.widget.FloatingActionButton
        android:layout_height="132dp"
        android:layout_width="156dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="175dp"
        android:theme="@style/FAB"
        android:id="@+id/fabAboutUs"
        android:layout_marginBottom="75dp"
        android:src="@drawable/icon_aboutus_128"
        android:layout_gravity="left|center_vertical" />

    <android.support.design.widget.FloatingActionButton
        android:layout_height="132dp"
        android:layout_width="156dp"
        android:id="@+id/fabFAQ"
        android:theme="@style/FAB"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="75dp"
        android:src="@drawable/icon_faq_128"
        android:layout_gravity="left|center_vertical" />
    <android.support.design.widget.FloatingActionButton
        android:layout_height="132dp"
        android:layout_width="156dp"
        android:layout_marginTop="50dp"
        android:theme="@style/FAB"
        android:id="@+id/fabDonate"
        android:layout_marginBottom="50dp"
        android:src="@drawable/icon_donate_128"
        android:layout_gravity="center_horizontal|bottom" />
</FrameLayout>
